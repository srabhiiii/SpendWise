<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/login.css">
    <title>SPENDWISE</title>
</head>
<body>
    <%if(success.length>0) {%>
        <%success.forEach(message=>{%>
            <div class="alert flash-success" role="alert">
                <%=message%>
            </div>
        <%})%>
        
    <%}%>
    <%if(error.length>0){%>
        <%error.forEach(message=>{%>
            <div class="alert alert-danger" role="alert">
            <%= message %>
            </div>
        <%})%>
        
    <%}%>
    <div class="container">
        <h1 style="color: blueviolet;font-size: 150%;"><strong>SPEND <i class="fa-solid fa-money-check-dollar" style="color: blueviolet;"></i> WISE</strong></h1>
     
        <h1 style="color: rgb(206, 170, 240);font-size: 150%;" >Signup</h1>
        
        <form method="POST" action="/signup">
            <input type="text" name="username" placeholder="Enter Username">
            <input type="text" name="email" placeholder="Enter Email Id">
            <input type="password" name="password" placeholder="Enter password">
            <button type="submit">SignUp</button>
            <p>Already Have an Account ? <a href="/login">Login</a></p>
        </form>
    </div>
    <script src="https://kit.fontawesome.com/f798946187.js" crossorigin="anonymous"></script>
</body>
</html>
</body>
</html>